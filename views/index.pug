extends default

block content
    div.container
        each namable in namables
            div.enemy
                div.enemy-image(style=`background: url('/images/${namable.imagePath}') top center no-repeat; background-size: contain;`)
                h2.enemy-name
                    | #{namable.name}
                h3
                    | Entity
                a(href=`/profile?id=${namable.id}`)
                    | View Entity

                div.enemy
        each location in locations
            div.enemy
                div.enemy-image(style=`background: url('/images/${location.imagePath}') top center no-repeat; background-size: contain;`)
                h2.enemy-name
                    | #{location.name}
                h3
                    | Location
                a(href=`/profile?id=${location.id}`)
                    | View Location
