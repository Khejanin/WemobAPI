extends default

block content
    div.container
        each entity in entities
            div.enemy
                div.enemy-image(style=`background: url('/images/${entity.imagePath}') top center no-repeat; background-size: contain;`)
                h2.enemy-name
                    | #{entity.name}
                h3
                    | Entity
                a(href=`/getEntityInformation?id=${entity.id}`)
                    | View Entity

                div.enemy
        each location in locations
            div.enemy
                div.enemy-image(style=`background: url('/images/${location.imagePath}') top center no-repeat; background-size: contain;`)
                h2.enemy-name
                    | #{location.name}
                h3
                    | Location
                a(href=`/getLocationInformation?id=${location.id}`)
                    | View Location
